//setting the size and color of the window
size(300,400);
background(0);

//drawing three blue lines
stroke(0,100,255);
strokeWeight(6);

int  a = 70;
int  b = 120;
int  c = 230;

line(a, b, c , b);
line(a , b-10, c ,  b-10);
line(a,  b+30, c , b+30);
line(a, b+70, c , b+70);
line(a, b+140, c, b+140);
line(a , b-10, a ,  b+140);
line(c , b-10, c ,  b+140);
